@model EmployeeManagementSystem.Models.AddTask

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h1>Edit</h1>

<h4>AddTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmployeeComments" class="control-label"></label>
                <input asp-for="EmployeeComments" class="form-control" />
                <span asp-validation-for="EmployeeComments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="EmployeeViewTask">Back to List</a>
</div>

